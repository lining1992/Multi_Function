<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/login_et"
        android:layout_width="880px"
        android:layout_height="150px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:background="@drawable/shape_editor_storke"
        android:hint="手机号即为登陆账号"
        android:drawableLeft="@drawable/login_dengluhao"
        android:drawablePadding="30px"
        android:paddingLeft="30px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="30px">

        <EditText
            android:id="@+id/getcode_et"
            android:layout_width="550px"
            android:layout_height="150px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50px"
            android:background="@drawable/shape_editor_storke"
            android:hint="请输入验证码"
            android:drawableLeft="@drawable/login_yanzhengma"
            android:drawablePadding="30px"
            android:paddingLeft="30px"/>
        <Button
            android:id="@+id/getcode_bt"
            android:layout_width="330px"
            android:layout_height="150px"
            android:text="获取验证码"
            android:background="#ff6600"
            android:textColor="#fff"/>
    </LinearLayout>

    <EditText
        android:id="@+id/et1"
        android:layout_width="880px"
        android:layout_height="150px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:background="@drawable/shape_editor_storke"
        android:hint="请输入6~16位密码"
        android:drawableLeft="@drawable/login_miam"
        android:drawablePadding="30px"
        android:paddingLeft="30px"/>

    <EditText
        android:id="@+id/et2"
        android:layout_width="880px"
        android:layout_height="150px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:background="@drawable/shape_editor_storke"
        android:hint="请重新输入一遍密码"
        android:drawableLeft="@drawable/login_zaicishurumima"
        android:drawablePadding="30px"
        android:paddingLeft="30px"/>

    <Button
        android:id="@+id/register_bt"
        android:layout_marginTop="50px"
        android:layout_width="880px"
        android:layout_height="150px"
        android:layout_gravity="center_horizontal"
        android:background="#ff6600"
        android:text="完成注册"
        android:textColor="#fff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:text="第三方登陆"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weixin_login"
            android:layout_marginTop="100px"
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:src="@drawable/dlweixin_icon"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/qq_login"
            android:layout_marginTop="100px"
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:src="@drawable/dlqq_icon"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>