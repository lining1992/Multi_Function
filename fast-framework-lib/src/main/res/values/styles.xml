<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="alertDialogTheme">@style/FastAlertDialogStyle</item>
    </style>

    <!-- 自定义的dialog样式 -->
    <style name="FastAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/fast_framework_dialog_button</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/fast_framework_dialog_msg</item>
        <!-- Used for the background -->
        <item name="android:background">@color/fast_framework_dialog_bg</item>
    </style>

    <!-- shadow -->
    <declare-styleable name="ShadowLayout">
        <attr name="sl_cornerRadius" format="dimension" />
        <attr name="sl_shadowRadius" format="dimension" />
        <attr name="sl_shadowColor" format="color" />
        <attr name="sl_dx" format="dimension" />
        <attr name="sl_dy" format="dimension" />
    </declare-styleable>

</resources>