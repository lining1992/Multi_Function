<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/f_guide_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:fitsSystemWindows="false">

    <com.fast.framework.style.guide.color.GuideBackgroundView
        android:id="@+id/f_guide_background_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2c809f" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/f_guide_view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <FrameLayout
            android:id="@+id/f_guide_bottom_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</FrameLayout>
